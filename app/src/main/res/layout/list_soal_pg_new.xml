<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="14dp"
        app:cardElevation="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Soal : 1"
                android:id="@+id/tvNomorJawaban"
                android:textSize="@dimen/text_titid_baim"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/roboto"/>
            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/webSoal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/linearA">
                            <LinearLayout
                                android:layout_margin="10dp"
                                android:layout_width="@dimen/lingkar_jawaban_pg"
                                android:layout_height="@dimen/lingkar_jawaban_pg"
                                android:gravity="center"
                                android:background="@drawable/round_blue">
                                <Button
                                    android:id="@+id/btnA"
                                    android:layout_width="@dimen/lingkar_jawaban_pg_inner"
                                    android:layout_height="@dimen/lingkar_jawaban_pg_inner"
                                    android:background="@drawable/round_background"
                                    android:text="A"
                                    android:textColor="@color/colorBlueSky"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvJawabanA"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/text_titid_imam"
                            android:fontFamily="@font/roboto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/test1"
                            android:gravity="center|left"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/linearB">
                            <LinearLayout
                                android:layout_margin="10dp"
                                android:layout_width="@dimen/lingkar_jawaban_pg"
                                android:layout_height="@dimen/lingkar_jawaban_pg"
                                android:gravity="center"
                                android:background="@drawable/round_blue">
                                <Button
                                    android:id="@+id/btnB"
                                    android:layout_width="@dimen/lingkar_jawaban_pg_inner"
                                    android:layout_height="@dimen/lingkar_jawaban_pg_inner"
                                    android:background="@drawable/round_background"
                                    android:text="B"
                                    android:textColor="@color/colorBlueSky"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvJawabanB"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/text_titid_imam"
                            android:fontFamily="@font/roboto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/loreum"
                            android:gravity="center|left"/>

                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/linearC">
                            <LinearLayout
                                android:layout_margin="10dp"
                                android:layout_width="@dimen/lingkar_jawaban_pg"
                                android:layout_height="@dimen/lingkar_jawaban_pg"
                                android:gravity="center"
                                android:background="@drawable/round_blue">
                                <Button
                                    android:id="@+id/btnC"
                                    android:layout_width="@dimen/lingkar_jawaban_pg_inner"
                                    android:layout_height="@dimen/lingkar_jawaban_pg_inner"
                                    android:background="@drawable/round_background"
                                    android:text="C"
                                    android:textColor="@color/colorBlueSky"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvJawabanC"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/text_titid_imam"
                            android:fontFamily="@font/roboto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/test1"
                            android:gravity="center|left"/>

                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/linearD">
                            <LinearLayout
                                android:layout_margin="10dp"
                                android:layout_width="@dimen/lingkar_jawaban_pg"
                                android:layout_height="@dimen/lingkar_jawaban_pg"
                                android:gravity="center"
                                android:background="@drawable/round_blue">
                                <Button
                                    android:id="@+id/btnD"
                                    android:layout_width="@dimen/lingkar_jawaban_pg_inner"
                                    android:layout_height="@dimen/lingkar_jawaban_pg_inner"
                                    android:background="@drawable/round_background"
                                    android:text="D"
                                    android:textColor="@color/colorBlueSky"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvJawabanD"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/text_titid_imam"
                            android:fontFamily="@font/roboto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/test2"
                            android:gravity="center|left"/>

                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/linearE">
                            <LinearLayout
                                android:layout_margin="10dp"
                                android:layout_width="@dimen/lingkar_jawaban_pg"
                                android:layout_height="@dimen/lingkar_jawaban_pg"
                                android:gravity="center"
                                android:background="@drawable/round_blue">
                                <Button
                                    android:id="@+id/btnE"
                                    android:layout_width="@dimen/lingkar_jawaban_pg_inner"
                                    android:layout_height="@dimen/lingkar_jawaban_pg_inner"
                                    android:background="@drawable/round_background"
                                    android:text="E"
                                    android:textColor="@color/colorBlueSky"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvJawabanE"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/text_titid_imam"
                            android:fontFamily="@font/roboto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/test3"
                            android:gravity="center|left"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>